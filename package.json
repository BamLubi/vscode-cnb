{
    "name": "vscode-cnb",
    "displayName": "Cnblogs blogger",
    "description": "A vscode extension used to write and publish blog post to cnblogs",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.62.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-cnb.logout",
                "title": "登出",
                "icon": "dist/assets/icon-logout.svg"
            },
            {
                "command": "vscode-cnb.previous-posts-list",
                "title": "上一页",
                "icon": "dist/assets/icon-page-previous.svg",
                "enablement": "!vscode-cnb.posts-list.refreshing && vscode-cnb.posts-list.hasPrevious"
            },
            {
                "command": "vscode-cnb.seek-posts-list",
                "title": "跳页",
                "icon": "dist/assets/icon-seek.svg",
                "enablement": "!vscode-cnb.posts-list.refreshing && vscode-cnb.posts-list.pageCount > 0"
            },
            {
                "command": "vscode-cnb.next-posts-list",
                "title": "下一页",
                "icon": "dist/assets/icon-page-next.svg",
                "enablement": "!vscode-cnb.posts-list.refreshing && vscode-cnb.posts-list.hasNext"
            },
            {
                "command": "vscode-cnb.refresh-posts-list",
                "title": "刷新",
                "icon": "dist/assets/icon-refresh.svg",
                "enablement": "!vscode-cnb.posts-list.refreshing"
            }
        ],
        "configuration": {
            "title": "vscode-cnb",
            "properties": {
                "vscode-cnb.workspace": {
                    "default": "",
                    "scope": "resource",
                    "type": "string",
                    "editPresentation": "singlelineText",
                    "markdownDescription": "用于存放博文的工作空间, 默认会使用`~/Documents/Cnblogs`, 当检测到vscode处于此工作空间时, 通过vscode-cnb插件, 您可以在此目录下编辑博客园的博文"
                }
            }
        },
        "views": {
            "cnblogs": [
                {
                    "id": "cnblogs-authorize",
                    "name": "登录/授权",
                    "when": "!vscode-cnb.isAuthorized"
                },
                {
                    "id": "cnblogs-account",
                    "name": "我的博客园",
                    "when": "vscode-cnb.isAuthorized"
                }
            ],
            "explorer": [
                {
                    "id": "cnblogs-posts-list",
                    "name": "博客园-随笔列表",
                    "when": "vscode-cnb.isTargetWorkspace && vscode-cnb.isAuthorized",
                    "icon": "./dist/assets/favicon.svg"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "vscode-cnb.logout",
                    "when": "view == cnblogs-account",
                    "group": "navigation"
                },
                {
                    "command": "vscode-cnb.previous-posts-list",
                    "when": "view == cnblogs-posts-list",
                    "group": "navigation@1"
                },
                {
                    "command": "vscode-cnb.next-posts-list",
                    "when": "view == cnblogs-posts-list",
                    "group": "navigation@2"
                },
                {
                    "command": "vscode-cnb.seek-posts-list",
                    "when": "view == cnblogs-posts-list",
                    "group": "navigation@3"
                },
                {
                    "command": "vscode-cnb.refresh-posts-list",
                    "when": "view == cnblogs-posts-list",
                    "group": "navigation@4"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "cnblogs",
                    "title": "Cnblogs console",
                    "icon": "./dist/assets/favicon.svg"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "cnblogs-authorize",
                "contents": "欢迎使用博客园vscode插件! 请先登录授权!"
            },
            {
                "view": "cnblogs-authorize",
                "contents": "[Login](command:vscode-cnb.login)"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@types/express": "^4.17.1",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/randomstring": "^1.1.8",
        "@types/vscode": "^1.62.0",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vscode/test-electron": "^1.6.2",
        "copy-webpack-plugin": "^10.0.0",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "prettier": "^2.5.0",
        "ts-loader": "^9.2.5",
        "typescript": "^4.4.4",
        "webpack": "^5.52.1",
        "webpack-cli": "^4.8.0"
    },
    "dependencies": {
        "base64url": "^3.0.1",
        "crypto": "^1.0.1",
        "express": "^4.17.1",
        "node-fetch": "^3.0.0",
        "oidc-client": "^1.11.5",
        "randomstring": "^1.1.4"
    }
}
