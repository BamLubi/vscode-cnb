{
    "name": "cnb-blogger",
    "displayName": "Cnblogs blogger",
    "description": "A vscode extension used to write and publish blog post to cnblogs",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.62.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:cnblogs-authorize",
        "onView:cnblogs-posts-list"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "cnb-blogger.logout",
                "title": "登出",
                "icon": "dist/assets/icon-logout.svg"
            },
            {
                "command": "cnb-blogger.previous-posts-list",
                "title": "上一页",
                "icon": "dist/assets/icon-page-previous.svg",
                "enablement": "!cnb-blogger.posts-list.refreshing && cnb-blogger.posts-list.hasPrevious"
            },
            {
                "command": "cnb-blogger.next-posts-list",
                "title": "下一页",
                "icon": "dist/assets/icon-page-next.svg",
                "enablement": "!cnb-blogger.posts-list.refreshing && cnb-blogger.posts-list.hasNext"
            },
            {
                "command": "cnb-blogger.seek-posts-list",
                "title": "跳页"
            },
            {
                "command": "cnb-blogger.refresh-posts-list",
                "title": "刷新",
                "icon": "dist/assets/icon-refresh.svg",
                "enablement": "!cnb-blogger.posts-list.refreshing"
            }
        ],
        "views": {
            "cnblogs": [
                {
                    "id": "cnblogs-authorize",
                    "name": "Authorize",
                    "when": "!cnb-blogger.isAuthorized"
                },
                {
                    "id": "cnblogs-posts-list",
                    "name": "Posts Explorer",
                    "when": "cnb-blogger.isAuthorized"
                },
                {
                    "id": "cnblogs-account",
                    "name": "Account",
                    "when": "cnb-blogger.isAuthorized"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "cnb-blogger.logout",
                    "when": "view == cnblogs-account",
                    "group": "navigation"
                },
                {
                    "command": "cnb-blogger.seek-posts-list",
                    "when": "view == cnblogs-posts-list",
                    "group": "navigation"
                },
                {
                    "command": "cnb-blogger.previous-posts-list",
                    "when": "view == cnblogs-posts-list",
                    "group": "navigation"
                },
                {
                    "command": "cnb-blogger.next-posts-list",
                    "when": "view == cnblogs-posts-list",
                    "group": "navigation"
                },
                {
                    "command": "cnb-blogger.refresh-posts-list",
                    "when": "view == cnblogs-posts-list",
                    "group": "navigation"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "cnblogs",
                    "title": "Cnblogs console",
                    "icon": "./dist/assets/favicon.svg"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "cnblogs-authorize",
                "contents": "欢迎使用博客园vscode插件! 请先登录授权!"
            },
            {
                "view": "cnblogs-authorize",
                "contents": "[Login](command:cnb-blogger.login)"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@types/express": "^4.17.1",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/randomstring": "^1.1.8",
        "@types/vscode": "^1.62.0",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vscode/test-electron": "^1.6.2",
        "copy-webpack-plugin": "^10.0.0",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "prettier": "^2.5.0",
        "ts-loader": "^9.2.5",
        "typescript": "^4.4.4",
        "webpack": "^5.52.1",
        "webpack-cli": "^4.8.0"
    },
    "dependencies": {
        "base64url": "^3.0.1",
        "crypto": "^1.0.1",
        "express": "^4.17.1",
        "node-fetch": "^3.0.0",
        "oidc-client": "^1.11.5",
        "randomstring": "^1.1.4"
    }
}
